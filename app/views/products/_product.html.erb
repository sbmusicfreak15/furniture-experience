<% @products.each do |product| %>
  <div class="col-sm" id="prod_img">
    <td><%= image_tag(product.image_url, class: "img-responsive", id: "img_size") if product.image_url %></td>
    <a href="#"><h3><%= product.name  %></h3></a>
    <h4><%= product.description %></h4>
    <h5>$<%= product.price %></h5>
  </div><!-- /col -->
<% end %>
