<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, class: "login_form") do |form| %>
<div class="row">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "border text", placeholder: "Enter Name"%>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "border text", placeholder: "Enter Email"%>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "border text", placeholder: "Enter Message", rows: 5 %>
  </div>
</div>
<%= form.submit "Send", class: "border" %>
<% end %>
