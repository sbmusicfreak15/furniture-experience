var refreshRating = function(){
  $('.rating').raty({
    starHalf: '<%= asset_path 'rating/star-half.png' %>',
    starOff: '<%= asset_path 'rating/star-off.png' %>',
    starOn: '<%= asset_path 'rating/star-on.png' %>',
    scoreName: 'comment[rating]'
  });

  $('.rated').raty({
    starHalf: '<%= asset_path 'rating/star-half.png' %>',
    starOff: '<%= asset_path 'rating/star-off.png' %>',
    starOn: '<%= asset_path 'rating/star-on.png' %>',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
};

$(document).on('turbolinks:load', function(){
  refreshRating();

  $('.zoom_01').elevateZoom({
    zoomWindowHeight: 400,
    zoomWindowWidth: 400,
    zoomWindowFadeIn: 500,
    zoomWindowFadeOut: 500,
    lensFadeIn: 500,
    lensFadeOut: 500,
    zoomWindowPosition: 9,
    scrollZoom: true

});
});
